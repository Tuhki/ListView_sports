<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:padding="10dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:background="@mipmap/background" >

    <TextView
        android:id="@+id/i5nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/textSize"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/oval_textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/i5desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/i5nom"/>

    <ImageView
        android:id="@+id/i5image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/i5desc"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/i5sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/i3sports"
        android:textSize="@dimen/textSize"
        android:background="@color/colorButton"
        android:layout_below="@id/i5image" />


    <Button
        android:id="@+id/i5accueil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/i3accueil"
        android:textSize="@dimen/textSize"
        android:background="@color/colorButton"
        android:layout_below="@id/i5sports" />

    <TextView
        android:id="@+id/i5donnees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/infos"
        android:layout_alignParentBottom="true" />


</RelativeLayout>


